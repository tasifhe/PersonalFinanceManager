<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.TextAlignment?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="personalfinancemanager.OverviewController">
    <children>
        <VBox alignment="CENTER" spacing="20.0" layoutX="10.0" layoutY="10.0" prefWidth="780.0" prefHeight="580.0" style="-fx-background-color: #f7f7f7; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-background-radius: 5;">
            <children>
                <Label text="Overview" textFill="black" textAlignment="CENTER">
                    <font>
                        <Font size="28.0" />
                    </font>
                </Label>
                <Label fx:id="labelBalance" text="Total Balance: $0.00" textFill="#333" style="-fx-font-size: 18px;"/>
                <Label fx:id="labelExpenses" text="Total Expenses: $0.00" textFill="#333" style="-fx-font-size: 18px;"/>
                <Label fx:id="labelSavings" text="Total Savings: $0.00" textFill="#333" style="-fx-font-size: 18px;"/>
                
                <!-- Back Button -->
                <Button text="Back" onAction="#handleBackButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20 10 20; -fx-background-radius: 5;" />
            </children>
            <padding>
                <Insets top="30.0" bottom="30.0" left="30.0" right="30.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
